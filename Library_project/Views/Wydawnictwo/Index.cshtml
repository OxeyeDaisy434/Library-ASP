@model IEnumerable<Library_project.Models.Wydawnictwo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (!User.IsInRole("Czytelnik"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IDWydawnictwo">Details</a>
                @if (!User.IsInRole("Czytelnik"))
                {

                    <span>&nbsp;|&nbsp;</span>
                    <a asp-action="Edit" asp-route-id="@item.IDWydawnictwo">Edit</a>
                    <span>&nbsp;|&nbsp;</span>
                    <a asp-action="Delete" asp-route-id="@item.IDWydawnictwo">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
