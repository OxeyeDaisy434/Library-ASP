@model IEnumerable<Library_project.Models.Egzemplarz>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (!User.IsInRole("Czytelnik"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dostepnosc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RokZakupu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ksiazka)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dostepnosc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RokZakupu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ksiazka.ISBN)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IDEgzemplarz">Details</a>

                @if (!User.IsInRole("Czytelnik")){

                    <span>&nbsp;|&nbsp;</span>
                    <a asp-action="Edit" asp-route-id="@item.IDEgzemplarz">Edit</a>
                    <span>&nbsp;|&nbsp;</span>
                    <a asp-action="Delete" asp-route-id="@item.IDEgzemplarz">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
